@model IEnumerable<MConsole>
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Consolas</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Console" asp-action="Create"><i class="fa-solid fa-plus"></i> Agregar Nueva Consola</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre de Consola</th>
                    <th>Descripcion</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
            @foreach(var objConsole in Model)
            {
                        <tr>
                            <td width="15%">@objConsole.ConsoleName</td>
                            <td>@objConsole.Description</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-route-id="@objConsole.idConsole" asp-action="Edit" class="btn btn-warning mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a asp-route-id="@objConsole.idConsole" asp-action="Delete" class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
            }
                
            </tbody>
        </table>
    }
    else
    {
        <p>No existe ningun Registro</p>
    }
</div>
@section Scripts {
    @if (TempData["editConsole"]!= null)
    {
        <script>
            Toastify({
                text: "Se edito correctamente la Consola",
                duration: 3000,
                newWindow: true,
                close: true,
                gravity: "top", // `top` or `bottom`
                position: "right", // `left`, `center` or `right`
                stopOnFocus: true, // Prevents dismissing of toast on hover
                style: {
                    background: "linear-gradient(to right, #00b09b, #96c93d)",
                },
            }).showToast();
        </script>
    }

    @if (TempData["deleteConsole"] != null)
    {
        <script>
            Toastify({
                text: "Se Elimino correctamente la Consola",
                duration: 3000,
                newWindow: true,
                close: true,
                gravity: "top", // `top` or `bottom`
                position: "right", // `left`, `center` or `right`
                stopOnFocus: true, // Prevents dismissing of toast on hover
                style: {
                    background: "linear-gradient(to right, #ff5500, #ff0000)",
                },
            }).showToast();
        </script>
    }
}