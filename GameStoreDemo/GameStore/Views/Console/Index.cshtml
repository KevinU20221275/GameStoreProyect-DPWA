@model IEnumerable<MConsole>
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Consolas</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Console" asp-action="Create"><i class="fa-solid fa-plus"></i> Agregar Nueva Consola</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre de Consola</th>
                    <th>Descripcion</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
            @foreach(var objConsole in Model)
            {
                        <tr>
                            <td width="15%">@objConsole.ConsoleName</td>
                            <td>@objConsole.Description</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a class="btn btn-warning mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a class="btn btn-danger mx-2"><i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
            }
                
            </tbody>
        </table>
    }
    else
    {
        <p>No existe ningun Registro</p>
    }
</div>
