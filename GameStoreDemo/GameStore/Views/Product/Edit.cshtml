@model MProduct


<form method="post" asp-action="Edit">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Editar video Juego</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="idProduct" hidden />
                        <label asp-for="ProductName">Nombre</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div><br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description">Descripcion</label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control "></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div><br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ShortDescription">Descripcion Corta</label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="ShortDescription" class="form-control "></textarea>
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    </div>
                </div><br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price">Precio</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div><br />
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-info w-100"><i class="fa-solid fa-check"></i></button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-100"><i class="fa-solid fa-xmark"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {

    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                lang: 'es-Es'
            });
        });
    </script>
}
