@model MCategory


<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Agregar Categoria</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryName">Nombre</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                </div><br />
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Order">Orden</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Order" class="form-control" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                </div><br />
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-info w-100"><i class="fa-solid fa-check"></i></button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-100"><i class="fa-solid fa-xmark"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {

    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                lang: 'es-Es'
            });
        });
    </script>
}
